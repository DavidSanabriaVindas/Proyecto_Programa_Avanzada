@model PYME.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<h2 class="mb-3">Editar Usuario</h2>

<form asp-action="Editar"
      asp-route-id="@Model.Id_Usuario"
      method="post"
      class="row g-3">

    <input type="hidden" asp-for="Id_Usuario" />

    <div class="col-md-4">
        <label asp-for="Nombre" class="form-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Primer_Apellido" class="form-label">Primer Apellido</label>
        <input asp-for="Primer_Apellido" class="form-control" />
        <span asp-validation-for="Primer_Apellido" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Segundo_Apellido" class="form-label">Segundo Apellido</label>
        <input asp-for="Segundo_Apellido" class="form-control" />
        <span asp-validation-for="Segundo_Apellido" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Username" class="form-label">Username</label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Password" class="form-label">Contraseña</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Id_Rol" class="form-label">Rol</label>
        <select asp-for="Id_Rol" class="form-select">
            <option value="">Seleccione un rol</option>
            @foreach (var rol in ViewBag.Roles as List<PYME.Models.Rol>)
            {
                <option value="@rol.Id_Rol">@rol.Nombre</option>
            }
        </select>
        <span asp-validation-for="Id_Rol" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Telefono" class="form-label">Teléfono</label>
        <input asp-for="Telefono" type="number" class="form-control" />
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Correo" class="form-label">Correo</label>
        <input asp-for="Correo" type="email" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Direccion_Exacta" class="form-label">Dirección Exacta</label>
        <input asp-for="Direccion_Exacta" class="form-control" />
        <span asp-validation-for="Direccion_Exacta" class="text-danger"></span>
    </div>

    <div class="col-md-12">
        <div class="form-check">
            <input asp-for="Estado" class="form-check-input" type="checkbox" />
            <label asp-for="Estado" class="form-check-label">
                Usuario Activo
            </label>
        </div>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">
            Guardar cambios
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            Cancelar
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}