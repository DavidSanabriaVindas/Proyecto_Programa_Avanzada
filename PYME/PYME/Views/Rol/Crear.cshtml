@model PYME.Models.Rol

@{
    ViewData["Title"] = "Crear Rol";
}

<h2 class="mb-3">Crear Rol</h2>

<form asp-action="Crear" method="post" class="row g-3">

    <div class="col-md-8">
        <label asp-for="Nombre" class="form-label">Nombre del Rol</label>
        <input asp-for="Nombre" class="form-control" placeholder="Ej: Administrador, Vendedor, Usuario" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="col-md-12">
        <div class="form-check">
            <input asp-for="Estado" class="form-check-input" type="checkbox" checked />
            <label asp-for="Estado" class="form-check-label">
                Rol Activo
            </label>
        </div>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">
            Guardar
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            Cancelar
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}